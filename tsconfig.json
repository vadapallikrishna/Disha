{
  "compilerOptions": {       
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6","dom"],
    "jsx":"react",                                                                      
    "sourceMap": true,
    "outDir": "./dist",                                                                         
    "rootDir": "./lib",                                                                                                                                                                                                                                                          
    "noImplicitAny": true,                                                                                              
    "strictNullChecks": true,                                              
    "noImplicitThis": true,                                                                                   
    "suppressImplicitAnyIndexErrors": true,            
    "noUnusedLocals": true,                                                       
    "moduleResolution": "node",                                                                                                                                                                                                        
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "lib/*.test.tsx"
  ]
}
